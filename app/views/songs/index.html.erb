<div class="row">
	<div class="col">
		<h2>All the songs in our hub:</h2>
		<table class="table table-striped">
			<tr>
				<th>Artist</th>
				<th>Title</th>
				<th>Times Added</th>
				<th>Add to Playlist</th>
			</tr>
			<% @songs.each do |song| %>
				<tr>
					<td><%= song.artist %></td>
					<td><a href="/songs/<%= song.id %>"><%= song.title %></a></td>
					<td><%= song.adds %></td>
					<td><a href="/songs/<%= song.id %>/listeners" data-method="post">Add</a></td>
				</tr>
			<% end %>
		</table>
	</div>

	<div class="col">
		<h2>Add a Song:</h2>
		<form action="/songs" method="post">
			<input type = 'hidden' name = "authenticity_token" value = "<%=form_authenticity_token%>">

			<div class="form-group">
				<label for="song[title]">Title:</label>
				<input type="text" class="form-control" name="song[title]">
			</div>

			<div class="form-group">
				<label for="song[artist]">Artist:</label>
				<input type="text" class="form-control" name="song[artist]">
			</div>

			<button class="btn btn-primary">Add Song</button>
		</form>
	</div>
</div>