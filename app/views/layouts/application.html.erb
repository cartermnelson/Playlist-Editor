<!DOCTYPE html>
<html>
<head>
  <title>BeltExam</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if current_user %>
    <a href="/logout" data-method="post">Logout</a>
    <hr>
  <% end %>

  <% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
      <b style="color: red"><%= e %></b>
      <br>
    <% end %>
  <% end %>

  <% if flash[:notice] %>
    <% flash[:notice].each do |n| %>
      <b style="color: green"><%= n %></b>
      <br>
    <% end %>
  <% end %>

<%= yield %>

</body>
</html>
