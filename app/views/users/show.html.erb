<h2><%= @user.first_name %> <%= @user.last_name %>'s Playlist</h2>

<table class="table table-striped">
	<tr>
		<th>Artist</th>
		<th>Title</th>
		<th>Times Added</th>
	</tr>
	<% @playlist.each do |listener| %>
		<tr>
			<td><%= listener.song.artist %></td>
			<td><a href="/songs/<%= listener.song.id %>"><%= listener.song.title %></a></td>
			<td><%= listener.adds %></td>
		</tr>
	<% end %>
</table>